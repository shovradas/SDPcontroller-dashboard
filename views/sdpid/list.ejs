<div class="mb-4">
    <div class="table-responsive">
        <%- include('partials/pagination') %>
        <table class="table bg-white border-bottom" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th class="pl-4">SDPID</th>
                    <th>TYPE</th>
                    <th>STATUS</th>
                    <th>ADMINISTRATOR</th>
                    <th>LOCATION</th>
                    <th>ORG</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% list.forEach(obj => { %>
                <tr>
                    <td class="pl-4"><a href="<%= moduleRoute %>/<%= obj.sdpid %>"><%= obj.sdpid %></a></td>
                    <td><%= obj.type %></td>        
                    <td><%- obj.valid == 1? '<span class="text-success">Active<span>': 'Inactive' %></td>
                    <td><%= obj.user_id ? obj.user_id: 'Unassigned' %></td>                                
                    <td><%= obj.locality %>, <%= obj.state %>, <%= obj.country %></td>      
                    <td><%= obj.org %> <%= obj.org_unit ? `(${obj.org_unit})`: '' %></td>              
                    <td class="text-right">
                        <a href="<%= moduleRoute %>/<%= obj.sdpid %>" class="btn btn-dark btn-circle btn-sm"><i class="fas fa-info"></i></a>
                        <a href="<%= moduleRoute %>/<%= obj.sdpid %>/update" class="btn btn-dark btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                        <a href="<%= moduleRoute %>/<%= obj.sdpid %>/delete/" class="btn btn-dark btn-circle btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        
        <%- list.length == 0? '<div class="text-center mb-3">No records available</div>' : '' %>

        <%- include('partials/pagination') %>
    </div>
</div>

<%- contentFor('search_panel') %>
<%- include('partials/list_search') %>

<%- contentFor('button_panel') %>
<div class="text-right">
    <a href="<%= moduleRoute %>/create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Add New
    </a>
</div>