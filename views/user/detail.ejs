<div class="mb-5">
    <a href="<%= moduleRoute %>/<%=obj['id']%>/update" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-edit fa-sm text-white-50"></i> Edit
    </a>
    <a href="<%= moduleRoute %>/<%=obj['id']%>/delete" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-trash fa-sm text-white-50"></i> Delete
    </a>
</div>

